{
  "manifest_version": 3,
  "name": "Content Protection Assistant",
  "version": "1.0.0",
  "description": "Quickly report content infringements and submit takedown requests",
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications",
    "scripting"
  ],
  
  "host_permissions": [
    "http://localhost:8000/*",
    "https://api.contentprotection.com/*",
    "https://*.autodmca.com/*"
  ],
  
  "background": {
    "service_worker": "../shared/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["../shared/content.js"],
      "css": ["../shared/content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "../shared/popup.html",
    "default_title": "Content Protection Assistant",
    "default_icon": {
      "16": "../icons/icon-16.png",
      "32": "../icons/icon-32.png",
      "48": "../icons/icon-48.png",
      "128": "../icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "../icons/icon-16.png",
    "32": "../icons/icon-32.png",
    "48": "../icons/icon-48.png",
    "128": "../icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "../icons/*",
        "../shared/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "minimum_chrome_version": "88"
}