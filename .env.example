# Backend Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

# Database Configuration
POSTGRES_PASSWORD=your-secure-database-password-here
DATABASE_URL=postgresql://postgres:your-secure-database-password-here@postgres:5432/contentprotection

# Redis Configuration  
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://redis:6379

# Application Security
SECRET_KEY=your-256-bit-secret-key-here
WATERMARK_KEY=your-watermark-encryption-key-here
ENVIRONMENT=production

# Email/SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
EMAIL_FROM_NAME=Content Protection Platform
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# API Keys for Search Engines
GOOGLE_API_KEY=your-google-custom-search-api-key
GOOGLE_CUSTOM_SEARCH_ID=your-google-custom-search-engine-id
BING_API_KEY=your-bing-web-search-api-key

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Social Media API Keys
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Domain Configuration
FRONTEND_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com
WEBSOCKET_URL=wss://api.yourdomain.com/ws

# Monitoring & Logging
GRAFANA_PASSWORD=your-grafana-admin-password
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Security Settings
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com,www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# File Upload Settings
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,txt

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=100
LOGIN_RATE_LIMIT_PER_MINUTE=5

# Background Job Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_WORKER_CONCURRENCY=4

# AI/ML Configuration
FACE_RECOGNITION_TOLERANCE=0.6
CONTENT_SIMILARITY_THRESHOLD=0.8
AI_MODEL_PATH=/app/models

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# External Services
WHOIS_API_KEY=your-whois-api-key
CLOUDFLARE_API_KEY=your-cloudflare-api-key
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# SendGrid Email Service (Advanced Email Delivery)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=AutoDMCA Platform

# SendGrid Dynamic Templates (Optional - for professional email templates)
# Create templates in SendGrid dashboard and add their IDs here
SENDGRID_DMCA_TEMPLATE_ID=d-your-dmca-template-id
SENDGRID_ALERT_TEMPLATE_ID=d-your-alert-template-id
SENDGRID_WELCOME_TEMPLATE_ID=d-your-welcome-template-id
SENDGRID_VERIFICATION_TEMPLATE_ID=d-your-verification-template-id
SENDGRID_PASSWORD_RESET_TEMPLATE_ID=d-your-reset-template-id
SENDGRID_SUBSCRIPTION_TEMPLATE_ID=d-your-subscription-template-id
SENDGRID_BILLING_REMINDER_TEMPLATE_ID=d-your-billing-template-id

# Google Vision API (Advanced Image Content Analysis)
# Option 1: API Key (simpler but limited functionality)
GOOGLE_VISION_API_KEY=AIza-your-google-vision-api-key

# Option 2: Service Account Key File Path (recommended for production)
# GOOGLE_VISION_CREDENTIALS_PATH=/path/to/your-service-account-key.json

# Option 3: Service Account Key as JSON String (for containerized deployments)
# GOOGLE_VISION_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project",...}

# PayPal Payment Processing (Alternative to Stripe)
# Get credentials from: https://developer.paypal.com/developer/applications/
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id
PAYPAL_ENVIRONMENT=sandbox  # Use 'live' for production

# Frontend URL for redirects and email links
FRONTEND_URL=https://yourdomain.com

# Support Configuration
SUPPORT_EMAIL=support@yourdomain.com

# =============================================================================
# INTEGRATION FEATURE FLAGS
# =============================================================================

# Enable/disable specific integrations
ENABLE_SENDGRID=true
ENABLE_GOOGLE_VISION=true  
ENABLE_PAYPAL=true

# Fallback behavior
EMAIL_FALLBACK_TO_SMTP=true
VISION_FALLBACK_TO_LOCAL=true
PAYMENT_FALLBACK_TO_STRIPE=true

# Circuit breaker settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MINUTES=3
HEALTH_CHECK_INTERVAL_MINUTES=5