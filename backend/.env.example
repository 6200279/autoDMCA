# Application Settings
PROJECT_NAME=Content Protection Platform
VERSION=1.0.0
DESCRIPTION=AI-powered content protection and DMCA takedown service
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_V1_STR=/api/v1

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS & Hosts
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-db-password
POSTGRES_DB=autodmca
POSTGRES_PORT=5432
SQLALCHEMY_DATABASE_URI=postgresql+asyncpg://postgres:your-db-password@localhost:5432/autodmca

# Database Security & Performance
POSTGRES_SSL_MODE=prefer
POSTGRES_CONNECT_TIMEOUT=30
POSTGRES_COMMAND_TIMEOUT=60
DATABASE_QUERY_LOGGING=false
DATABASE_SLOW_QUERY_THRESHOLD=1.0
DATABASE_HEALTH_CHECK_INTERVAL=300
DATABASE_MAX_RETRIES=3
DATABASE_RETRY_DELAY=5

# Redis
REDIS_URL=redis://localhost:6379

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Content Protection Platform

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads

# AI/ML Settings
FACE_RECOGNITION_TOLERANCE=0.6
CONTENT_SIMILARITY_THRESHOLD=0.8

# DMCA Settings
DMCA_EMAIL_TEMPLATE=dmca_takedown.html
DMCA_RESPONSE_DAYS=7

# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id